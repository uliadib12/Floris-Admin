<script is:inline>
    const category = document.querySelector('#category-title');
    const urlParams = new URLSearchParams(window.location.search);
    const category_name = urlParams.get('name');
    const parsed_category_name = category_name.replace(/-/g, ' ')
    .replace(/\b\w/g, l => l.toUpperCase());
    category.innerHTML = parsed_category_name;
</script>